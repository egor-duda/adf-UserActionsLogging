<?xml version="1.0" encoding="UTF-8" ?>
<adfc-config xmlns="http://xmlns.oracle.com/adf/controller" version="1.2">
  <task-flow-definition id="main-taskflow">
    <default-activity>main</default-activity>
    <view id="main">
      <page>/main.jsf</page>
    </view>
    <task-flow-call id="dialog-taskflow">
      <task-flow-reference>
        <document>/WEB-INF/dialog-taskflow.xml</document>
        <id>dialog-taskflow</id>
      </task-flow-reference>
      <run-as-dialog>
        <display-type>
          <inline-popup/>
        </display-type>
      </run-as-dialog>
    </task-flow-call>
    <view id="dialog">
      <page>/dialog.jsf</page>
    </view>
    <control-flow-rule id="__2">
      <from-activity-id>main</from-activity-id>
      <control-flow-case id="__3">
        <from-outcome>dialog</from-outcome>
        <to-activity-id>dialog-taskflow</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
    <control-flow-rule id="__1">
      <from-activity-id>dialog</from-activity-id>
      <control-flow-case id="__4">
        <from-outcome>exit</from-outcome>
        <to-activity-id>main</to-activity-id>
      </control-flow-case>
    </control-flow-rule>
  </task-flow-definition>
</adfc-config>
